<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_row_drop"
              android:padding="22dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/iv_drop_size"
        android:layout_height="@dimen/iv_drop_size"
        android:background="@null"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_drop" />

    <TextView
        android:id="@+id/tv_what"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:fontFamily="@string/sans_serif_light"
        android:text="what"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/text_when"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="when"
        android:fontFamily="@string/sans_serif_light"
        android:textColor="@android:color/white" />
</LinearLayout>